# ==========================================================
# üåç APPLICATION ENVIRONMENT
# ==========================================================

# Set application environment: development | staging | production
APP_ENV=development

# Enable debug mode (True/False)
DEBUG=True


# ==========================================================
# üîê API KEYS & SECRETS
# ==========================================================

# Alpha Vantage API Key
ALPHA_VANTAGE_KEY=your_alpha_vantage_api_key_here

# OpenAI API Key (if using AI sentiment or LLM components)
OPENAI_API_KEY=your_openai_api_key_here


# ==========================================================
# üß† MARKET DATA CONFIGURATION
# ==========================================================

# Default stock symbol to monitor
DEFAULT_SYMBOL=AAPL

# Market data fetch interval in seconds
MARKET_FETCH_INTERVAL=10


# ==========================================================
# üì° KAFKA CONFIGURATION
# ==========================================================

# Kafka bootstrap servers
KAFKA_BOOTSTRAP=localhost:9092

# Kafka topic names
MARKET_TOPIC=market_topic
PREDICTION_TOPIC=prediction_topic

# Consumer group ID
KAFKA_CONSUMER_GROUP=prediction-api-group


# ==========================================================
#  FASTAPI SERVER CONFIGURATION
# ==========================================================

# API host
API_HOST=0.0.0.0

# API port
API_PORT=8000

# Number of worker processes
API_WORKERS=1


# ==========================================================
#  LOGGING CONFIGURATION
# ==========================================================

# Logging level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO


# ==========================================================
#  OPTIONAL PERFORMANCE SETTINGS
# ==========================================================

# Maximum retry attempts for Kafka connection
KAFKA_MAX_RETRIES=5

# Retry base delay (seconds)
KAFKA_RETRY_BASE_DELAY=2

# Timeout for external API calls (seconds)
API_TIMEOUT=10
